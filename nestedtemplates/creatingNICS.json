{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "spwebVMName": {
      "type": "string"
    },
    "spWebSubnetRef": {
      "type": "string"
    },
    "spWebBEAddressPoolID": {
      "type": "string"
    },
    "spappVMName": {
      "type": "string"
    },
    "spAppSubnetRef": {
      "type": "string"
    },
    "spCABEAddressPoolID": {
      "type": "string"
    },
    "spCANATRuleID": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('spwebVMName'), copyIndex(),'-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "copy": {
        "name": "spWebnicLoop",
        "count": 2
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('spWebSubnetRef')]"
              },
              "applicationGatewayBackendAddressPools": [
                {
                  "id": "[parameters('spWebBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('spappVMName'),'0-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('spAppSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('spCABEAddressPoolID')]"
                }
              ],
              "loadBalancerInboundNatRules": [
                {
                  "id": "[parameters('spCANATRuleID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('spappVMName'),'1-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('spAppSubnetRef')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}