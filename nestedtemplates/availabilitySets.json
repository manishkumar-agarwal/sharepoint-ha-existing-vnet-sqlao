{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "spAvailabilitySetNames": {
      "type": "object"
    },
    "spStorageAccounts": {
      "type": "array"
    },
    "location": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[parameters('spAvailabilitySetNames').name[copyIndex()]]",
      "apiVersion": "2017-03-30",
      "location": "[parameters('location')]",
      "copy": {
        "name": "availabilitySetLoop",
        "count": "[int(length(parameters('spAvailabilitySetNames').name))]"
      },
      "properties": {
      }
    },
    {
      "name": "[parameters('spStorageAccounts')[copyIndex()].name]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('spStorageAccounts')[copyIndex()].sku]"
      },
      "copy": {
        "name": "storageloop",
        "count": "[length(parameters('spStorageAccounts'))]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "manishabc123"
      },
      "kind": "Storage"
    }
  ],
  "outputs": {  }
}