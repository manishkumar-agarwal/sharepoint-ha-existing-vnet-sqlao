{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "spCALBName": {
      "type": "string"
    },
    "spCALBFE": {
      "type": "string"
    },
    "spCAResourceId": {
      "type": "string"
    },
    "spCALBBE": {
      "type": "string"
    },
    "spCANAT": {
      "type": "string"
    },
    "spCAlbFEConfigID": {
      "type": "string"
    },
    "spWebLBName": {
      "type": "string"
    },
    "spWebLBFE": {
      "type": "string"
    },
    "spWebResourceId": {
      "type": "string"
    },
    "spWebLBBE": {
      "type": "string"
    },
    "spWebLB": {
      "type": "string"
    },
    "spWebLBFEConfigID": {
      "type": "string"
    },
    "spWebBEAddressPoolID": {
      "type": "string"
    },
    "spWebProbeID": {
      "type": "string"
    },
    "spWebProbe": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "name": "[parameters('spCALBName')]",
      "type": "Microsoft.Network/loadBalancers",
      "location": "[parameters('location')]",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[parameters('spCALBFE')]",
            "properties": {
              "publicIPAddress": {
                "id": "[parameters('spCAResourceId')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[parameters('spCALBBE')]"
          }
        ],
        "inboundNatRules": [
          {
            "name": "[parameters('spCANAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[parameters('spCAlbFEConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "name": "[parameters('spWebLBName')]",
      "type": "Microsoft.Network/loadBalancers",
      "location": "[parameters('location')]",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[parameters('spWebLBFE')]",
            "properties": {
              "publicIPAddress": {
                "id": "[parameters('spWebResourceId')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[parameters('spWebLBBE')]"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "[parameters('spWebLB')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[parameters('spWebLBFEConfigID')]"
              },
              "backendAddressPool": {
                "id": "[parameters('spWebBEAddressPoolID')]"
              },
              "probe": {
                "id": "[parameters('spWebProbeID')]"
              },
              "protocol": "Tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false
            }
          }
        ],
        "probes": [
          {
            "name": "[parameters('spWebProbe')]",
            "properties": {
              "protocol": "Http",
              "port": 8088,
              "intervalInSeconds": 15,
              "numberOfProbes": 5,
              "requestPath": "/iisstart.htm"
            }
          }
        ]
      }
    }
  ]
}