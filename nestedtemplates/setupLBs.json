{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "generalParameters": {
      "type": "object"
    },
    "spCALBName": {
      "type": "string"
    },
    "spCALBFE": {
      "type": "string"
    },
    "spCAResourceId": {
      "type": "string"
    },
    "spCALBBE": {
      "type": "string"
    },
    "spCANAT": {
      "type": "string"
    },
    "spCAlbFEConfigID": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "name": "[parameters('spCALBName')]",
      "type": "Microsoft.Network/loadBalancers",
      "tags": "[parameters('generalParameters').tags]",
      "location": "[parameters('generalParameters').location]",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[parameters('spCALBFE')]",
            "properties": {
              "publicIPAddress": {
                "id": "[parameters('spCAResourceId')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[parameters('spCALBBE')]"
          }
        ],
        "inboundNatRules": [
          {
            "name": "[parameters('spCANAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[parameters('spCAlbFEConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false
            }
          }
        ]
      }
    }
  ]
}